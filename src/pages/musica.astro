---
import BaseLayout from '../layouts/Layout.astro';
import MusicGallery from '../components/MusicGallery.jsx';

// El título que aparecerá arriba en el header del Layout
const pageTitle = "Nuestra Cueva Virtual/ Curaduría Musical";
---

<BaseLayout title={pageTitle}>
  
  <h2 style="var(--color-highlight); margin-top: 0;">> LOBBY / CURADURÍA_MUSICAL</h2>
  
  <p style="font-size: 0.9rem; font-style: italic; opacity: 0.8; margin-bottom: 2rem;">
    Colecciones de canciones previamente seleccionadas por Jose. Selecciona un registro para abrir el expediente.
  </p>

  <div style="border-top: 1px dashed #333; padding-top: 2rem;">
      <MusicGallery client:load />
  </div>

</BaseLayout>