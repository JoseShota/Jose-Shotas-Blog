---
import BaseLayout from '../layouts/Layout.astro';
import MusicGallery from '../components/MusicGallery.jsx';

const pageTitle = "Curaduría Musical";
---

<BaseLayout title={pageTitle}>
  <div class="min-h-screen bg-[#050505] text-gray-300 font-sans selection:bg-amber-900 selection:text-white">
    
    {/* Navegación Simple */}
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-24 flex items-center justify-between">
      <a href="/" class="text-xs font-mono text-gray-600 hover:text-amber-600 transition-colors uppercase tracking-widest">
        ← Jose Shōta / Index
      </a>
      <span class="text-xs font-mono text-gray-500 uppercase tracking-widest border border-gray-800 px-3 py-1 rounded-full">
        Hi-Fi Archives
      </span>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-32">
      
      {/* Encabezado General de la Sección */}
      <header class="mb-16 border-b border-gray-900 pb-8">
        <h1 class="text-3xl font-light text-white mb-2 tracking-wide">
          {pageTitle}
        </h1>
        <p class="text-gray-500 text-sm max-w-2xl font-serif italic">
          Colección personal de paisajes sonoros. Selecciona un registro para comenzar la reproducción.
        </p>
      </header>

      {/* Aquí cargamos la Galería Interactiva */}
      <MusicGallery client:load />

    </main>

  </div>
</BaseLayout>