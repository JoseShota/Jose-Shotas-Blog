---
import BaseLayout from '../layouts/Layout.astro';
import MusicPlayer from '../components/MusicPlayer.jsx';

// TEXTOS ORIGINALES (Respetados)
const pageTitle = "Canciones para cuando muera y transcienda";
const description = "Imagina levitar en medio de una calle transitada. De inmediato reconoces que partirás sin regresar ¿Qué canción elegirías de fondo? Una selección de Jose Shōta.";

// Imagen por defecto para la playlist (aparece cuando no hay hover en canciones)
// Puedes cambiar esta ruta por la imagen que quieras usar de portada principal.
const defaultCover = "/images/default-cover.jpg"; 
---

<BaseLayout title={pageTitle}>
  <div class="min-h-screen bg-[#050505] text-gray-300 font-sans selection:bg-amber-900 selection:text-white">
    
    {/* Navegación sutil */}
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-20 flex items-center justify-between">
      <a href="/" class="text-xs font-mono text-gray-600 hover:text-amber-600 transition-colors uppercase tracking-widest">
        ← Jose Shōta / Index
      </a>
      <span class="hidden md:block text-xs font-mono text-gray-700 uppercase tracking-widest">
        Curaduría Musical
      </span>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-32">
      {/* Pasamos tus textos originales como props al componente */}
      <MusicPlayer 
        client:load 
        playlistTitle={pageTitle}
        playlistDesc={description}
        playlistCover={defaultCover} 
      />
    </main>

  </div>
</BaseLayout>