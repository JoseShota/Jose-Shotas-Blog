---
import videos from '../data/videos.json';

// Configuration
const Z_SPACING = 800; // Distance between videos (depth)
const X_OFFSET = 350;  // How far left/right from center
---

<div class="hall-container">
  <div class="hall-scene" id="hallScene">
    
    <div class="floor-grid"></div>

    {videos.map((video, index) => {
      // Calculate standard 3D position
      const isLeft = index % 2 === 0;
      const xPos = isLeft ? X_OFFSET : -X_OFFSET;
      const rotationY = isLeft ? -15 : 15;
      const zPos = index * -Z_SPACING; 

      return (
        <div 
          class="video-frame"
          id={`frame-${index}`}
          style={`--base-transform: translate3d(${xPos}px, 0, ${zPos}px) rotateY(${rotationY}deg);`}
        >
          <div class="click-overlay" onclick={`focusFrame(${index}, event)`}>
            <span class="inspect-hint">[ INSPECT DATA ]</span>
          </div>

          <div class="video-wrapper">
             <iframe 
                src={`https://www.youtube.com/embed/${video.id}`} 
                title={video.title} 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
             ></iframe>
          </div>
          
          <div class="video-meta">
            <span class="index-marker">No. 0{index + 1}</span>
            <h3>{video.title}</h3>
            <p class="cueva-muted desc-text">{video.desc}</p>
          </div>
        </div>
      );
    })}

    <div class="end-marker" style={`transform: translate3d(0, 0, ${(videos.length * -Z_SPACING) - 500}px)`}>
      [ END OF ARCHIVE ]
    </div>

  </div>
</div>

<style is:global>
  /* When inspecting, we hide the Intro Text in the parent page */
  body.inspecting-mode .intro-overlay {
    opacity: 0;
    filter: blur(10px); /* Retro "Signal Lost" effect */
    transform: scale(0.9);
    pointer-events: none;
    transition: all 0.5s ease-out;
  }
  /* --- NEW: HIDE OTHER FRAMES WHEN INSPECTING --- */
  /* Select all frames that are NOT the currently focused one */
  body.inspecting-mode .video-frame:not(.is-focused) {
    /* Move them far up (negative Y) and tilt them back slightly */
    transform: translateY(-150vh) rotateX(20deg) !important; 
    /* Fade them out */
    opacity: 0;
    /* Make them unclickable while gone */
    pointer-events: none;
    /* A slower, smoother transition for the "fly away" effect */
    transition: all 0.8s cubic-bezier(0.5, 0, 0, 1);
  }
  
  /* Ensure the intro text has a transition by default so it comes back smoothly */
  .intro-overlay {
    transition: all 0.5s ease-in;
  }
</style>

<script is:inline>
  // --- 1. SCROLL ENGINE ---
  const scene = document.getElementById('hallScene');
  const speedFactor = 2.5; 

  window.addEventListener('scroll', () => {
    const scrollY = window.scrollY;
    const zMove = scrollY * speedFactor;
    if (scene) {
      scene.style.transform = `translateZ(${zMove}px)`;
    }
  });

  // --- 2. FOCUS ENGINE (Inspect Mode) ---
  let currentFocus = null;

  window.focusFrame = (index, event) => {
    // Stop the click from immediately bubbling to the window (which would close it)
    if (event) event.stopPropagation();

    const frame = document.getElementById(`frame-${index}`);
    const overlay = frame.querySelector('.click-overlay');
    const zPos = parseInt(frame.style.getPropertyValue('--base-transform').match(/translate3d\(.*?,.*?,(.*?)px\)/)[1]);

    // If already focused, ignore
    if (currentFocus === index) return;

    // If another is focused, reset it first
    if (currentFocus !== null) {
      resetFrame(currentFocus);
    }

    // Set new focus
    currentFocus = index;
    frame.classList.add('is-focused');
    document.body.classList.add('inspecting-mode'); // Hides the "Accessing Archive" text
    
    // Disable glass so we can click the YouTube video
    overlay.style.pointerEvents = 'none'; 
    overlay.style.opacity = '0';

    // Move to Center (X=0, Y=0) and slightly forward (zPos + 350) to float in front of camera
    // We remove rotationY to make it face the user directly
    frame.style.transform = `translate3d(0px, 0px, ${zPos + 350}px) rotateY(0deg) scale(1.1)`;
    frame.style.zIndex = '100'; 
  };

  window.resetFrame = (index) => {
    const frame = document.getElementById(`frame-${index}`);
    if (!frame) return;

    const overlay = frame.querySelector('.click-overlay');
    
    frame.classList.remove('is-focused');
    
    // Return to wall
    frame.style.transform = frame.style.getPropertyValue('--base-transform');
    frame.style.zIndex = 'auto';

    // Re-enable glass for next time
    // Small timeout ensures the animation starts before we block clicks again
    setTimeout(() => {
        overlay.style.pointerEvents = 'auto';
        overlay.style.opacity = '1';
    }, 100);
  };

  // --- 3. CLICK OUTSIDE TO CLOSE ---
  window.addEventListener('click', (e) => {
    // Only proceed if we are currently inspecting something
    if (currentFocus !== null) {
        const focusedFrame = document.getElementById(`frame-${currentFocus}`);
        
        // If the click target is NOT inside the focused frame, close it.
        // (Note: The YouTube iframe swallows clicks, so this only fires for background clicks)
        if (focusedFrame && !focusedFrame.contains(e.target)) {
            resetFrame(currentFocus);
            currentFocus = null;
            document.body.classList.remove('inspecting-mode'); // Bring back the text
        }
    }
  });
</script>

<style>
  /* --- BASE --- */
  .hall-container {
    height: 100vh;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    overflow: hidden;
    perspective: 1000px; 
    z-index: 1; 
    pointer-events: none; 
  }

  .hall-scene {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 50%;
    left: 50%;
    transform-style: preserve-3d;
    will-change: transform;
  }

  .floor-grid {
    position: absolute;
    width: 200vw;
    height: 20000px; 
    background: 
      linear-gradient(var(--color-text-accent) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-text-accent) 1px, transparent 1px);
    background-size: 50px 50px;
    background-position: center;
    transform: rotateX(90deg) translateZ(300px) translateY(-50%);
    opacity: 0.1;
  }

  /* --- CARD --- */
  .video-frame {
    position: absolute;
    width: 420px; 
    left: -210px; 
    top: -180px; /* Adjusted slightly up to center better */
    background: #050505;
    border: 1px solid #333;
    padding: 10px;
    pointer-events: auto; 
    
    transform: var(--base-transform);
    transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1), 
                border-color 0.3s, 
                box-shadow 0.3s;
  }

  .video-frame:hover {
    border-color: var(--color-text-accent);
  }

  .video-frame.is-focused {
    border-color: var(--color-highlight);
    box-shadow: 0 0 60px rgba(35, 144, 158, 0.25);
  }

  /* --- GLASS OVERLAY (UPDATED) --- */
  .click-overlay {
    position: absolute;
    inset: 0; /* Covers EVERYTHING inside the border */
    z-index: 50;
    cursor: pointer;
    background: rgba(0, 0, 0, 0.01); /* Basically transparent but registers clicks */
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s;
  }
  
  .click-overlay:hover {
    background: rgba(35, 144, 158, 0.05); /* Very subtle tint on hover */
  }

  .inspect-hint {
    color: var(--color-highlight);
    font-family: var(--font-mono);
    font-weight: bold;
    opacity: 0;
    transform: scale(0.8);
    transition: all 0.2s;
    background: #000;
    padding: 5px 12px;
    border: 1px dashed var(--color-highlight);
    box-shadow: 0 0 10px #000;
  }

  .click-overlay:hover .inspect-hint {
    opacity: 1;
    transform: scale(1);
  }

  /* --- CONTENT --- */
  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    background: #000;
    margin-bottom: 1rem;
    pointer-events: none; /* Default: video not clickable until focused */
  }
  
  /* When focused, the wrapper allows pointer events (handled by removing overlay) */
  .video-frame.is-focused .video-wrapper {
     pointer-events: auto;
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .video-meta {
    font-family: var(--font-mono);
    text-align: left;
    position: relative;
    z-index: 40; /* Ensure text is below glass usually, but readable */
  }

  .index-marker {
    display: block;
    font-size: 0.7rem;
    color: var(--color-text-accent);
    margin-bottom: 0.2rem;
    border-bottom: 1px dashed #333;
    padding-bottom: 2px;
  }

  .video-meta h3 {
    font-size: 1rem;
    margin: 0.5rem 0;
    color: var(--color-text-light);
  }
  
  .desc-text {
    font-size: 0.8rem;
    transition: all 0.5s ease;
  }

  /* Text Glow Effect */
  .video-frame.is-focused .desc-text {
    color: #fff;
    text-shadow: 0 0 5px rgba(255, 255, 255, 0.6);
  }

  .end-marker {
    position: absolute;
    color: var(--color-highlight);
    font-family: var(--font-mono);
    font-size: 1.5rem;
    left: -100px;
    width: 200px;
    text-align: center;
  }
</style>